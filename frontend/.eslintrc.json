{
  "plugins": ["simple-import-sort"],
  "extends": ["next", "next/core-web-vitals", "prettier"],
  "rules": {
    "no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": false
      }
    ],
    "simple-import-sort/imports": "error",
    "no-restricted-imports": ["error"]
  }
}
